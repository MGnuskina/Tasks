@model List<PService.PersonViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


@using (Html.BeginForm("Index", "Persons", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>People</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ActionLink("AddNew", "AddPerson")
        <table class="table">
            <tr>
                <th></th>
            </tr>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(element => element[i].Id)
                        @Html.EditorFor(element => element[i].FirstName)
                    </td>
                    <td>
                        @Html.EditorFor(element => element[i].LastName)
                    </td>
                    <td>
                        @Html.EditorFor(element => element[i].Age)
                    </td>
                        @foreach(var item in Model[i].PhoneNumbers)
                        {
                            <td>
                                @Html.EditorFor(element => item.PhoneNumber)
                                @Html.EditorFor(element => item.PhoneNumberType)
                            </td>
                        }
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { @PersonID = Model[i].Id }) |
                        @Html.ActionLink("Delete", "Delete", new { @PersonID = Model[i].Id }) @*new PersonCL.Person() { ID = Model[i].Id, Age = Model[i].Age, FirstName = Model[i].FirstName, LastName = Model[i].LastName }) @*new Person.Models.PersonViewModel() { Person = item })*@
                    </td>
                </tr>
            }
        </table>
        <div class="form-group">
            <div class="col-md-offset-6">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
