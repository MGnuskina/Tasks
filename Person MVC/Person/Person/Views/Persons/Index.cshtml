@model IEnumerable<PersonCL.Person>
 @*Tuple<IEnumerable<PersonCL.Person>,PersonCL.Person>*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>People</h2>
@Html.ActionLink("AddNew", "AddPerson")
<table class="table">
    <tr>
        <th></th>
    </tr>

    @foreach (var item in Model.ToList())
    {
        <tr>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.Age
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit") |
                @Html.ActionLink("Details", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Edit", new { Id = item.ID })
            </td>
        </tr>
    }
</table>
